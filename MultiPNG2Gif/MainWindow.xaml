<Window x:Class="MultiPNG2Gif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiPNG2Gif"
        mc:Ignorable="d"
        Title="Multi PNG 2 GIF" Height="136" Width="490" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid Margin="0,0,4,6" RenderTransformOrigin="0.5,0.5">
        <Grid.LayoutTransform>
            <TransformGroup>
                <ScaleTransform ScaleY="1" ScaleX="1"/>
                <SkewTransform AngleY="0" AngleX="0"/>
                <RotateTransform Angle="0"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.LayoutTransform>
        <Button Content="Convert" HorizontalAlignment="Left" Margin="385,72,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Directory with frames:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="138"/>
        <CheckBox x:Name="ofap" Content="Open folder after proceed" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="sprite_name" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="450"/>

    </Grid>
</Window>
